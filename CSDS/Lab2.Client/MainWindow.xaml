<Window x:Class="Lab2.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.Client"
        mc:Ignorable="d"
        Title="Lab2.Client" Height="450" Width="400" ResizeMode="NoResize" FontFamily="Gill Sans MT" WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel Height="100" Margin="10,10,10,5" Background="#007241">
                
            </StackPanel>


            <StackPanel Margin="10,5,10,10" Orientation="Vertical" HorizontalAlignment="Stretch" Background="#218359">
                <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="14" Foreground="White">Secret Text</TextBlock>
                <TextBlock Margin="5" Height="250" Background="White" Foreground="#007241" x:Name="SecretText"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
