<Window x:Class="Lab2.Client.KeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.Client"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        FontFamily="Gill Sans MT" 
        WindowStyle="SingleBorderWindow"
        Width="200"
        Height="100"
        Title="Lab4" WindowStartupLocation="CenterOwner">
    <StackPanel Background="#007241" Orientation="Vertical">
        <TextBlock Margin="5" Text="Enter Session Key" Foreground="White" />
        <TextBox Margin="5" Padding="1" x:Name="KeyTextBox" Background="White" Foreground="#218359" BorderThickness="0" TextChanged="KeyTextBox_TextChanged"/>
    </StackPanel>
</Window>